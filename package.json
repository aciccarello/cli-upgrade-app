{
  "name": "@dojo/cli-upgrade-app",
  "version": "3.0.1-pre",
  "description": "Upgrade a Dojo application to a newer Dojo version",
  "main": "main",
  "scripts": {
    "build:cjs": "tsc",
    "build": "npm-run-all -p build:** -s dojo-package",
    "build:static:release": "cpx \"src/v4/core/**/*.{ts,d.ts,json}\" dist/release/v4/core",
    "build:static:test": "cpx \"src/v4/core/**/*.{ts,d.ts,json}\" dist/dev/src/v4/core",
    "clean": "rimraf dist src/core",
    "generate:core": "rimraf src/v4/core && git clone git@github.com:dojo/framework.git temp --branch v3.0.1 --single-branch && shx mv temp/src/core src/v4/core && rimraf temp && node ./src/v4/scripts/generate-dependency-map.js",
    "dojo-package": "dojo-package",
    "dojo-release": "dojo-release",
    "intern": "intern",
    "lint:tslint": "tslint -p .",
    "lint:prettier": "prettier -l \"{src,tests}/**/*.{ts,tsx}\"",
    "lint": "run-p lint:*",
    "precommit": "lint-staged",
    "prettier": "prettier --write \"{src,tests}/**/*.{ts,tsx}\"",
    "release": "run-s lint clean build \"dojo-release -- {@}\" --",
    "test": "run-s clean build intern",
    "uploadCoverage": "codecov --file=coverage/coverage.json",
    "watch": "dojo-tsc-watcher -p tsconfig.json -- dojo-package"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dojo/cli-upgrade-app.git"
  },
  "author": "",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/dojo/cli-upgrade-app/issues"
  },
  "homepage": "https://github.com/dojo/cli-upgrade-app#readme",
  "dependencies": {
    "chalk": "2.4.1",
    "dependency-tree": "^6.1.1",
    "fs-extra": "^7.0.0",
    "inquirer": "4.0.2",
    "jscodeshift": "matt-gadd/jscodeshift#ef5a272",
    "save-dev": "^2.0.0",
    "tslib": "1.8.1"
  },
  "devDependencies": {
    "@dojo/cli": "~3.0.0",
    "@dojo/scripts": "~3.0.1",
    "@types/inquirer": "0.0.35",
    "@types/node": "~9.6.23",
    "codecov": "~3.0.4",
    "cpx": "~1.5.0",
    "husky": "0.14.3",
    "intern": "^4.3.0",
    "lint-staged": "6.0.0",
    "npm-run-all": "~4.1.3",
    "rimraf": "^2.6.2",
    "shx": "^0.3.2"
  },
  "lint-staged": {
    "*.{ts,tsx}": [
      "prettier --write",
      "git add"
    ]
  },
  "prettier": {
    "singleQuote": true,
    "tabWidth": 4,
    "useTabs": true,
    "parser": "typescript",
    "printWidth": 120,
    "arrowParens": "always"
  }
}
